---
layout: compress
permalink: /feed.xml
# Atom Feed, reference: https://validator.w3.org/feed/docs/atom.html
---

{% capture source %}
<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
  <channel>
    <id>{{ "/" | absolute_url }}</id>
    <title>{{ site.title }}</title>
    <description>{{ site.description }}</description>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <author>
      <name>{{ site.social.name }}</name>
      <uri>{{ "/" | absolute_url }}</uri>
    </author>
    <link rel="self" type="application/atom+xml" href="{{ page.url | absolute_url }}"/>
    <link rel="alternate" type="text/html" hreflang="{{ site.alt_lang | default: site.lang }}"
      href="{{ '/' | absolute_url }}"/>  
    <rights> Â© {{ 'now' | date: '%Y' }} {{ site.social.name }} </rights>
    <icon>{{ site.baseurl }}/assets/img/favicons/favicon.ico</icon>
    <logo>{{ site.baseurl }}/assets/img/favicons/favicon-96x96.png</logo>
    <atom:link href="{{ "/" | absolute_url }}feed.xml" rel="self" type="application/rss+xml"/>

  {% for post in site.posts limit: 5 %}
    {% assign post_absolute_url = post.url | absolute_url %}
    <item>
      <guid>{{ post_absolute_url }}</guid>
      <title>{{ post.title }}</title>
      <link>{{ post_absolute_url }}</link>
      <description>{% include post-description.html max_length=100 %}</description>
      <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
    {% if post.last_modified_at %}
      <updated>{{ post.last_modified_at | date_to_xmlschema }}</updated>
    {% else %}
      <updated>{{ post.date | date_to_xmlschema }}</updated>
    {% endif %}
      
      <author>{{ post.author | default: site.social.name }}</author>

    {% if post.categories %}
      {% for category in post.categories %}
      <category term="{{ category }}" />
      {% endfor %}
    {% endif %}

    </item>
  {% endfor %}
  </channel>
</rss>
{% endcapture %}
{{ source | replace: '&', '&amp;' }}
